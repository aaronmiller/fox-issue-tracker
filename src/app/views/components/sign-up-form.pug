form.sign-up-form(method='POST')
  input#firstname(
    type='text'
    name='firstname'
    placeholder='First Name'
    required
  )
  input#lastname(
    type='text'
    name='lastname'
    placeholder='Last Name'
    required
  )
  input#username(
    type='text'
    name='username'
    placeholder='Username'
    required
  )
  input#password(
    type='password'
    name='password'
    placeholder='Password'
    required
  )
  input(
    type='submit'
    value='Submit'
  )
